{
  "name": "precise-watcher",
  "title": "Precise Watcher",
  "description": "Automate tasks on file change, run them in parallel, and forget about tool-specific plugins.",
  "keywords": [
    "watch files",
    "run commands on watched file",
    "watch files in NPM script",
    "file watcher",
    "dev tool",
    "chokidar wrapper",
    "CLI tool"
  ],
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src",
    "bin"
  ],
  "version": "2.0.0-dev",
  "main": "src/index.js",
  "bin": {
    "precise-watcher": "bin/cli"
  },
  "scripts": {
    "test": "jest --passWithNoTests --config jest.config.js --forceExit",
    "lint": "eslint .",
    "watch": "npm test -- --watch",
    "dev": "npm run watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlexisPuga/precise-watcher.git"
  },
  "author": {
    "name": "Alexis Puga",
    "url": "https://github.com/AlexisPuga"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AlexisPuga/precise-watcher/issues"
  },
  "homepage": "https://github.com/AlexisPuga/precise-watcher#readme",
  "devDependencies": {
    "eslint": "^7.27.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "fs-extra": "^10.0.0",
    "jest": "^27.0.1",
    "jest-runner-eslint": "^1.0.0",
    "standard": "^16.0.4"
  },
  "dependencies": {
    "chokidar": "^3.5.1",
    "colors": "^1.4.0",
    "debug": "^4.3.1",
    "parse-gitignore": "^1.0.1",
    "yargs": "^17.0.1"
  }
